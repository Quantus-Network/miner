{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "quantus-miner",
  "version": "0.1.1-beta.8",
  "identifier": "com.quantus.miner",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "quantus-miner",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "appimage",
      "dmg",
      "nsis"
    ],
    "category": "Utility",
    "shortDescription": "Post-quantum PoW miner for the Quantus network",
    "icon": [
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "displayLanguageSelector": true,
        "installMode": "currentUser"
      }
    }
  }
}
